<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/song_info_view_group"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/album_selection_background">

    <ImageView
        android:id="@+id/play_button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/play_button"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/play_button_image"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Song Name"
            android:fontFamily="@font/bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/song_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Song Length"
            android:fontFamily="@font/bold"/>

    </LinearLayout>

</RelativeLayout>